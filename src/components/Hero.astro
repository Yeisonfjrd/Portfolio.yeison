---
import Badge from "./Badge.astro";
import SocialPill from "./SocialPill.astro";
import LinkedInIcon from "./icons/LinkedIn.astro";
import GitHubIcon from "./icons/GitHub.astro";
import MailIcon from "./icons/Mail.astro";
import GalaxyAnimation from "./GalaxyAnimation";
---

<div class="relative w-full mb-10">
  <div class="relative w-full h-64 overflow-hidden md:h-80 lg:h-96 rounded-xl">
    <div class="absolute inset-0 z-10 bg-gradient-to-r from-violet-900/30 to-indigo-900/30 mix-blend-multiply rounded-xl"></div>
    <div class="w-full h-full">
      <GalaxyAnimation client:load />
    </div>
    <div class="absolute inset-0 bg-gradient-to-t from-[#0f0f1a]/90 via-transparent to-transparent z-20 rounded-xl"></div>
  </div>
  
  <div class="absolute bottom-0 left-0 z-30 w-full p-6 transform md:p-8 translate-y-1/3">
    <div class="flex flex-col items-start max-w-5xl gap-6 mx-auto md:flex-row md:items-end">
      <div class="relative">
        <div class="w-24 h-24 overflow-hidden border-4 rounded-full shadow-lg md:w-32 md:h-32 border-slate-900 shadow-violet-500/20">
          <img 
            src="/Yeison-fajardo.webp" 
            alt="Yeison Fajardo" 
            class="object-cover w-full h-full animate-morph"
          />
        </div>
        <span class="absolute bottom-0 right-0 w-5 h-5 bg-green-400 border-2 rounded-full border-slate-900"></span>
      </div>
      
      <div class="flex-1">
        <h1 class="mb-2 text-3xl font-bold text-white md:text-4xl lg:text-5xl hero-title">
          Yeison <span class="text-transparent bg-clip-text bg-gradient-to-r from-violet-400 to-indigo-400">Fajardo</span>
        </h1>
        <h2 class="mb-3 text-lg md:text-xl text-slate-300 hero-subtitle">
          <span class="font-semibold text-violet-400">Desarrollador Web</span> 
          con tres años de experiencia profesional
        </h2>
        <p class="max-w-2xl mb-4 text-slate-300 hero-description">
          Especializado en el desarrollo de aplicaciones web avanzadas, 
          optimizando la experiencia del usuario mediante interfaces 
          intuitivas y código de alta calidad.
        </p>
      </div>
    </div>
  </div>
</div>

<div class="max-w-3xl mx-auto mt-32 md:mt-24">
  <div class="flex flex-col gap-4">
    <div class="flex flex-wrap items-center gap-3 mb-2">
      <Badge>
        <span class="flex items-center gap-2">
          <span class="relative flex w-3 h-3">
            <span class="absolute inline-flex w-full h-full bg-green-400 rounded-full opacity-75 animate-ping"></span>
            <span class="relative inline-flex w-3 h-3 bg-green-500 rounded-full"></span>
          </span>
          Disponible para trabajar
        </span>
      </Badge>
      <a
        href="https://linkedin.com/in/yeison-fajardo"
        target="_blank"
        rel="noopener"
        class="flex items-center text-sm transition-colors text-slate-400 md:text-base hover:text-violet-400"
      >
        @yeisonfajardo
      </a>
    </div>

    <nav class="flex flex-wrap gap-3 mt-4">
      <SocialPill href="https://www.linkedin.com/in/yeison-fajardo">
        <LinkedInIcon class="size-5" />
        LinkedIn
      </SocialPill>
      
      <SocialPill href="https://github.com/Yeisonfjrd">
        <GitHubIcon class="size-5" />
        GitHub
      </SocialPill>
      
      <SocialPill href="https://mail.google.com/mail/?view=cm&fs=1&to=andresfajardo1606@gmail.com">
        <MailIcon class="size-5" />
        andresfajardo1606@gmail.com
      </SocialPill>
    </nav>
  </div>
</div>

<style>
  .hero-title {
    animation: fadeInUp 1s ease-out forwards;
  }

  .hero-subtitle {
    animation: fadeInUp 1s ease-out 0.2s forwards;
  }
  
  .hero-description {
    animation: fadeInUp 1s ease-out 0.4s forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes morph {
    0% {
      border-radius: 60% 40% 30% 70%/60% 30% 70% 40%;
    }
    50% {
      border-radius: 30% 60% 70% 40%/50% 60% 30% 60%;
    }
    100% {
      border-radius: 60% 40% 30% 70%/60% 30% 70% 40%;
    }
  }

  .animate-morph {
    animation: morph 8s ease-in-out infinite;
  }
</style>