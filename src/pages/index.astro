---
import Layout from "@/layouts/Layout.astro"
import SectionContainer from "@/components/SectionContainer.astro"
import Hero from "@/components/Hero.astro"
import Experience from "@/components/Experience.astro"
import Projects from "@/components/Projects.astro"
import AboutMe from "@/components/AboutMe.astro"
import TitleSection from "@/components/TitleSection.astro"
import Briefcase from "@/components/icons/Briefcase.astro"
import CodeIcon from "@/components/icons/Code.astro"
import ProfileCheck from "@/components/icons/ProfileCheck.astro"
import { siteConfig } from "@/data/site"
---

<Layout
  title={`${siteConfig.name} - Desarrollador Web con 3 años de experiencia`}
  description={siteConfig.description}
>
  <main>
    <SectionContainer class="py-12 md:py-24">
      <Hero />
    </SectionContainer>
  
    <div class="space-y-16">
      <SectionContainer id="experiencia" class="pt-8">
        <TitleSection>
          <Briefcase class="size-8" />
          Experiencia
        </TitleSection>
        <Experience />
      </SectionContainer>

      <SectionContainer id="proyectos" class="pt-8">
        <TitleSection>
          <CodeIcon class="size-7" />
          Proyectos
        </TitleSection>
        <Projects />
      </SectionContainer>

      <SectionContainer id="sobre-mi" class="pt-8">
        <TitleSection>
          <ProfileCheck class="size-8" />
          Sobre mí
        </TitleSection>
        <AboutMe />
      </SectionContainer>
    </div>
  </main>
</Layout>